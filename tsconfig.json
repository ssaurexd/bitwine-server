{    
  "compilerOptions": {        
      "module": "commonjs",
      "esModuleInterop": true,        
      "target": "es2018",
      "noImplicitAny": true,        
      "moduleResolution": "node",   
      "strict": false,     
      "sourceMap": true,
      "outDir": "dist",        
      "baseUrl": "./src",        
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"            
          ]
      }  
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "node_modules" ]
}